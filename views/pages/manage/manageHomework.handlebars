<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Ödevleri Yönet</h4>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Ödevleri Yönet</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <!-- Column -->
        <div class="col-md-12" style="margin-bottom: 10px;">
            <a href="/manage/addHomework" type="button" class="btn btn-primary margin-5">
                Ödev Ekle
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{#if homeworks}}
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title m-b-0">Ödev Listesi</h4>
                </div>
                <div class="comment-widgets scrollable">
                    <!-- Comment Row -->
                    {{#each homeworks}}
                    <div class="d-flex flex-row comment-row m-t-0">
                        <div class="logo-container" style="width:75px">
                            <img src="{{uploader.profilPhoto}}" alt="user" class="">
                        </div>
                        <div class="comment-text w-100">
                            <h6 class="font-medium">{{name}} <span class="text-muted">({{uploadDate}})</span> </h6>
                            <span class="m-b-15 d-block"> {{description}} </span>
                            <div class="comment-footer">
                                <span class="text-muted float-right">En geç teslim tarihi: {{lastDate}}</span>
                                <a href="/manage/editHomework/{{_id}}" type="button"
                                    class="btn btn-primary btn-sm">Ödevi Düzenle</a>
                                <a href="/manage/hideHomework/{{_id}}" type="button"
                                    class="btn btn-warning btn-sm">{{#if hide}}Gizliliği Kaldır{{else}}Ödevi
                                    Gizle{{/if}}</a>

                                <span data-toggle="modal" data-target="#removeHomework{{_id}}">
                                    <a style="color: #fff;" type="button" class="btn btn-danger btn-sm">Ödevi Sil</a>
                                </span>

                                <div class="modal fade" id="removeHomework{{_id}}" tabindex="-1" role="dialog"
                                    aria-labelledby="exampleModalLabel" aria-hidden="true ">
                                    <div class="modal-dialog" role="document ">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Kullanıcıyı Sil</h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true ">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <p>{{name}} isimli ödevi silmek istediğinize emin
                                                    misiniz?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-primary" data-dismiss="modal"
                                                    aria-label="Close">
                                                    İptal
                                                </button>
                                                <form class="form-horizontal" method="post"
                                                    action="/manage/removeHomework/{{_id}}">
                                                    <button type="Submit" class="btn btn-primary">Eminim</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}

                </div>
            </div>
            {{else}}
            <p>Ödev bulunmamaktadır.</p>
            {{/if}}
        </div>
    </div>
</div>

{{> _footer}}
</div>
</div>
{{> _mainScripts}}

{{#section 'link'}}
<link href="/assets/libs/dropzone/dist/min/basic.min.css" rel="stylesheet">
{{/section}}

{{#section 'style'}}
<link href="/dist/css/upload.css" rel="stylesheet">
{{/section}}

<script src="/assets/libs/dropzone/dist/dropzone.js"></script>