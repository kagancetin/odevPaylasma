<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Kullanıcı Ekle</h4>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                        <li class="breadcrumb-item active" aria-current="page"><a href="/">Kullanıcılar</a></li>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Kullanıcı Ekle</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="card">
        <form class="form-horizontal" method="post" action="/users/userAdd">
            <div class="card-body">
                <h4 class="card-title">Kullanıcı Ekle</h4>
                <div class="form-group row">
                    <label for="fullName" class="col-sm-3 text-right control-label col-form-label">Ad
                        Soyad</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="fullName" name="fullName"
                            value="{{{redata.fullName}}}" placeholder="Ad soyad">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="username" class="col-sm-3 text-right control-label col-form-label">Kullanıcı
                        Adı</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="username" name="username"
                            value="{{{redata.username}}}" placeholder="Kullanıcı Adı">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="email" class="col-sm-3 text-right control-label col-form-label">E-mail</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="email" name="email" value="{{{redata.email}}}"
                            placeholder="E-mail">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="phoneNumber" class="col-sm-3 text-right control-label col-form-label">Telefon
                        Numarası</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control phone-inputmask" id="phoneNumber" name="phoneNumber"
                            value="{{{redata.phoneNumber}}}" placeholder="Telefon Numarası">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 text-right control-label col-form-label">Kullanıcı Tipi</label>
                    <div class="col-sm-9">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" id="type0" value="0"
                                {{#ifCond redata.type '==' 0}} checked {{/ifCond}} name="type">
                            <label class="custom-control-label" for="type0">Yönetici</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" id="type1" value="1"
                                {{#ifCond redata.type '==' 1}} checked {{/ifCond}}{{#unless redata.type}} checked
                                {{/unless}} name="type">
                            <label class="custom-control-label" for="type1">Öğrenci</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="border-top">
                <div class="card-body">
                    <button type="button" class="btn btn-primary" data-toggle="modal"
                        data-target="#userAddModal">Kullanıcı
                        Ekle</button>
                </div>

            </div>
            <div class="modal fade" id="userAddModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true ">
                <div class="modal-dialog" role="document ">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Emin misiniz?</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true ">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Kullanıcı şifresi: ogrenci</p>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal" aria-label="Close">
                                İptal
                            </button>
                            <button type="Submit" class="btn btn-primary">Kullanıcı Ekle</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

{{> _footer}}
</div>
</div>
{{> _mainScripts}}